{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [ "es2015" ],
    "target": "es5",
    "baseUrl": "src",
    "paths": {
      "lib/*": ["lib/*"]
    },
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "test",
    "old-src"
  ]
}
